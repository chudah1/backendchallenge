<%- include("./partials/head") -%>

<div class="container">
<form action="/rest/createRecord" method="POST" >
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" name="name" maxlength="12" class="form-control"  placeholder="Name.." required>
      </div>
<div class="mb-3">
    <label class="form-label">Email address</label>
    <input type="email" name= "email" class="form-control" placeholder="name@example.com" required>
  </div>
  <div class="mb-3">
    <label class="form-label">Phone</label>
    <input type="tel" name= "phone" class="form-control" placeholder="024-452-7788" pattern="[0-9]{3}[0-9]{3}[0-9]{4}" required>
  </div>
  <div class="mb-3">
    <button type="submit" class="btn btn-primary">Create</button>
</div>
  </form>
  </div>
  <%- include("./partials/footer") -%>

</body>

</html>